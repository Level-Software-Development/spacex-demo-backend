{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "serverless offline start --stage local --noPrependStageInUrl",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand --testTimeout=30000",
    "populate-app": "node_modules/.bin/ts-node helpers/populate.ts",
    "run-db-locally": "docker run -it --rm -v $(pwd)/mysqldata:/var/lib/mysql -e MYSQL_ROOT_PASSWORD=password -d -p 3306:3306 mysql:5.6",
    "prepare-app": "npm run populate-app",
    "lint:tsc": "./node_modules/.bin/tsc --noEmit",
    "lint:tslint": "./node_modules/.bin/tslint -c tslint.production.json ./**/*.ts",
    "lint:types": "node_modules/.bin/ts-node server.ts",
    "lint": "run-p lint:tslint lint:tsc lint:types",
    "ci": "run-p lint test",
    "dev": "node --inspect ./node_modules/.bin/serverless offline --port 3000",
    "delete:types": "rm -rf ./common/types/backend/*.ts",
    "generate:types": "npm run delete:types && npm run generate:codegen",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "deploy": "chmod +x server.ts && ./node_modules/.bin/serverless deploy"
  },
  "author": "LevelSoftwareDevelopment",
  "license": "ISC",
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "@sentry/serverless": "^6.17.9",
    "@sentry/tracing": "^6.17.9",
    "@supercharge/promise-pool": "^2.0.0",
    "apollo-server-express": "^2.22.2",
    "aws-serverless-express": "^3.4.0",
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "graphql": "^14.6.0",
    "helmet": "^4.4.1",
    "js-sha1": "^0.6.0",
    "libphonenumber-js": "^1.9.6",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "node-fetch": "^2.6.0",
    "onesignal-node": "^3.2.0",
    "rate-limiter-flexible": "^2.2.1",
    "request-ip": "^2.1.3",
    "sequelize": "^4.44.4",
    "supertest": "^4.0.2",
    "umzug": "^2.3.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "^1.19.0",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/bluebird": "^3.5.33",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.26",
    "@types/node-fetch": "^2.5.7",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@types/validator": "^13.1.2",
    "apollo": "^2.32.0",
    "aws-sdk": "^2.817.0",
    "jest": "^25.5.2",
    "npm-run-all": "^4.1.5",
    "sequelize-cli": "^6.3.0",
    "serverless": "^3.1.0",
    "serverless-offline": "^8.4.0",
    "serverless-plugin-typescript": "^2.1.1",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
